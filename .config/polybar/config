modules-left = bspwm xwindow
modules-center =
modules-right = cpu memory date

tray-position = right
tray-padding = 2
tray-maxsize = 24

[global/wm]
margin-top = 0
#margin-bottom = 0

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm
pin-workspaces = false
enable-click = false
enable-scroll = false

label-focused = " %name% "
