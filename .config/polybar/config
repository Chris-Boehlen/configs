[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/mybar]
monitor = Virtual1
#override-redirect = true
#wm-stack = bspwm
width = 100%
height = 2%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

